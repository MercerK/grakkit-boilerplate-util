{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "lib": [ "ES2020" ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "target": "es2020",
    "watch": false,
    "outDir": "./dist",
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
